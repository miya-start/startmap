{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build",
    "deploy": "fly deploy --remote-only",
    "dev": "cross-env NODE_ENV=development remix dev",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "docker:up": "docker-compose up -d && sleep 3",
    "docker:down": "docker-compose down",
    "test": "npm run docker:up && dotenv -e .env.test -- npx prisma migrate reset --force && dotenv -e .env.test -- jest -i",
    "test:watch": "npm run docker:up && dotenv -e .env.test -- npx prisma migrate reset --force && dotenv -e .env.test -- jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.2",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "dotenv-cli": "^5.0.0",
    "jest": "^27.5.1",
    "prisma": "^3.10.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
